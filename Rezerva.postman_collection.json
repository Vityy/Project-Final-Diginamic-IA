{
  "info": {
    "name": "Rezerva API - Full Tests",
    "_postman_id": "rezerva-full-collection-001",
    "description": "Collection complète pour tester toutes les routes du projet Rezerva (auth, rooms, resources, reservations).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api" },
    { "key": "token", "value": "" },
    { "key": "roomId", "value": "" },
    { "key": "resourceId", "value": "" },
    { "key": "reservationId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"demo@exemple.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": { "raw": "http://localhost:3000/api/auth/login" }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.token) { pm.collectionVariables.set('token', json.token); }",

              "if (json.token){pm.environment.set('token', json.token);}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },

    {
      "name": "Rooms - Get All",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:3000/api/rooms" }
      }
    },
    {
      "name": "Rooms - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Salle A\",\n  \"capacity\": 10,\n  \"location\": \"Etage 1\"\n}"
        },
        "url": { "raw": "http://localhost:3000/api/rooms" }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.id) { pm.collectionVariables.set('roomId', json.id); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Rooms - Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Salle A modifiée\",\n  \"capacity\": 12\n}"
        },
        "url": { "raw": "http://localhost:3000/api/rooms/{{roomId}}" }
      }
    },
    {
      "name": "Rooms - Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:3000/api/rooms/{{roomId}}" }
      }
    },

    {
      "name": "Resources - Get All",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:3000/api/resources" }
      }
    },
    {
      "name": "Resources - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"Projecteur\",\n  \"description\": \"HDMI compatible\",\n  \"available\": true\n}"
        },
        "url": { "raw": "http://localhost:3000/api/resources" }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.id) { pm.collectionVariables.set('resourceId', json.id); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Resources - Update",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"description\": \"Projecteur 4K\",\n  \"available\": false\n}"
        },
        "url": { "raw": "http://localhost:3000/api/resources/{{resourceId}}" }
      }
    },
    {
      "name": "Resources - Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:3000/api/resources/{{resourceId}}" }
      }
    },


    {
      "name": "Reservations - Get All",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:3000/api/reservations" }
      }
    },
    {
      "name": "Reservations - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"roomId\": \"{{roomId}}\",\n  \"resourceId\": \"{{resourceId}}\",\n  \"date\": \"2025-12-01\",\n  \"startTime\": \"10:00\",\n  \"endTime\": \"11:00\",\n  \"description\": \"Réunion projet\"\n}"
        },
        "url": { "raw": "http://localhost:3000/api/reservations" }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "if (json.id) { pm.collectionVariables.set('reservationId', json.id); }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Reservations - Delete",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "http://localhost:3000/api/reservations/{{reservationId}}" }
      }
    }
  ]
}
